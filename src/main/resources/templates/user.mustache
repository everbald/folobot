<!DOCTYPE html>
<head>
    <title>Пользователи</title>
    <meta http-equiv="Content-Type" content="text/html" charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="css/user.css">
</head>
<html>
    <body>
        <div>
            <form method="post">
                <input id="userid" type="number" name="userid" placeholder="UserId"/>
                <input type="number" name="mainid" placeholder="MainId"/>
                <input type="text" name="tag" placeholder="Tag"/>
                <button type="submit" name="action" value="add">Добавить</button>
            </form>
        </div>
        <table id="maintab">
            <thead>
            <tr>
                <th>UserId</th>
                <th>MainId</th>
                <th>Имя</th>
                <th>Тэг</th>
                <th colspan="2">Действие</th>
            </tr>
            </thead>
            <tbody>
            {{#folousers}}
                <tr>
                    <form method="post">
                        <td width=10% align="center"><input type="number" name="userid" value="{{userId}}" readonly/></td>
                        <td width=10% align="center"><input type="number" name="mainid" value="{{mainId}}" /></td>
                        <td width="20%"><i>{{RealName}}</i></td>
                        <td width=40%><i><input type="text" name="tag" value="{{tag}}"/></i></td>
                        <td width="10%" align="center">
                            <button type="submit" name="action" value="update">Обновить</button>
                        </td>
                        <td width="10%" align="center">
                            <button type="submit" name="action" value="delete">Удалить</button>
                        </td>
                    </form>
                </tr>
            {{/folousers}}
            </tbody>
        </table>
    </body>
</html>